								<div id="{{model}}-{{id}}" class="flex flex-col w-full items-center justify-evenly">
{{- $added := false }}
{{- range $relay := .State.Relays }}
	{{- if and (ne $relay.Gpio "") (ne $relay.Name "") }}
		{{- $added = true }}
									<div class="flex flex-row items-center">
										<span class="text-sm text-right mr-2.5">{{$relay.Name}}</span>
										<img class="h-6" src="/model/{{model}}/images/relay-{{$relay.State}}.png">
									</div>
	{{- end }}
{{- end }}
{{- if not $added }}
									<span>Undefined</span>
{{- end }}
								</div>
