<div class="model-{{.Device.Model}} {{.Vars.offline}}" id="device-{{.Device.Id}}"
			hx-target="this"
			hx-swap="outerHTML">
			<div class="flex flex-row ml-{{mult .Vars.level 10}}">
				<div class="detail flex flex-col m-1 p-2.5
					{{.Vars.bgColor}} {{.Vars.textColor}}
					border-solid border-2 rounded-3xl">
					<div class="flex flex-row
						items-center justify-between cursor-pointer"
						hx-get="/device/{{.Device.Id}}/overview">
						<span class="text-lg font-bold ml-2.5 w-20">{{.Device.Name}}</span>
						<div class="flex flex-row">
{{ template "button-locked.tmpl" . }}
						</div>
					</div>
					<div class="m-2.5 rounded-xl overflow-hidden">
{{ template "device-body-detail.tmpl" .}}
	     				</div>
				</div>
			</div>
{{ .Device.RenderChildren .Vars.sessionId (add .Vars.level 1) }}
		</div>
