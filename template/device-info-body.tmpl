<div class="panel flex-col">

	<div class="flex flex-row mb-5 items-center cursor-pointer" hx-get="/device/{{id}}/full">
		<img class="icon px-1" src="/model/{{model}}/images/back-arrow.png">
		<span class="no-underline">Info</span>
	</div>

	<style>
		table th {
			text-align: right;
		}
	</style>

	<table class="border-separate border-spacing-5-1">
		<tr>
			<th>ID</th>
			<td>{{id}}</td>
		</tr>
		<tr>
			<th>Model</th>
			<td>{{model}}</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{name}}</td>
		</tr>

		<tr class="hr-row">
			<td colspan="2"><hr></td>
		</tr>

{{- if ne package "" }}
		<tr>
			<th>Model Package</th>
			<td><a target="_blank" href="https://{{package}}">{{package}}</a></td>
		</tr>
{{- end }}
	</table>

{{- template "info.tmpl" . }}

	<div class="flex flex-row justify-end mt-8">
		<a target="_blank" href="/model/{{model}}/code"><button class="btn">Show Code</button></a>
		<a target="_blank" href="/device/{{id}}/state"><button class="btn">Show State</button></a>
	</div>
</div>
