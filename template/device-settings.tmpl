<div class="model-{{.Device.Model}} {{classOffline}}" id="device-{{.Device.Id}}"
	hx-target="this"
	hx-swap="outerHTML">

	<div class="flex flex-row ml-{{mult .Level 10}}">

		<div class="detail flex flex-col m-1 p-2
			{{bgColor}} {{textColor}}
			border-solid border-2 rounded-3xl">

			<div class="flex flex-row items-center justify-between"
				hx-get="/device/{{.Device.Id}}/detail">
				<span class="text-lg font-bold ml-2.5 w-full cursor-pointer">
					{{.Device.Name}}
				</span>
				<span class="icon">&#x23CE;</span>
			</div>

			<div class="m-2.5 rounded-xl overflow-hidden">
{{ template "device-download-body.tmpl" .}}
			</div>
		</div>
	</div>
{{ .Device.RenderChildren .SessionId (add .Level 1) }}
</div>
