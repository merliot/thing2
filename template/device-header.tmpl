			<header class="flex flex-row justify-between items-center p-4">
				<div class="flex items-center">
					<img class="w-10 h-10" src="/model/{{.Device.Model}}/images/icon.png"></img>
					<span class="px-5 text-lg font-bold">{{.Device.Name}}</span>
				</div>
				<span class="rounded-2xl border-solid border-3 text-red-500 px-2.5 py-1" id="offline">Offline</span>
				<div class="flex items-center">
{{- if .Device.Locked}}
					<span class="icon cursor-not-allowed">&#x1F512;</span>
{{- end}}
{{- if eq .Vars.view "download"}}
					<img class="icon px-1 nono" src="/model/{{.Device.Model}}/images/download.png" disabled></img>
{{- else}}
					<img class="icon px-1" src="/model/{{.Device.Model}}/images/download.png"
						hx-get="/device/{{.Device.Id}}/download"></img>
{{- end}}
{{- if eq .Vars.view "info"}}
					<img class="icon px-1 nono" src="/model/{{.Device.Model}}/images/info.png" disabled></img>
{{- else}}
					<img class="icon px-1" src="/model/{{.Device.Model}}/images/info.png"
						hx-get="/device/{{.Device.Id}}/info"></img>
{{- end}}
				</div>
			</header>
