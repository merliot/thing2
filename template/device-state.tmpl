<div class="model-{{model}} {{classOffline}}" id="device-{{id}}"
	hx-target="this"
	hx-swap="outerHTML">

	<div class="flex flex-row ml-{{mult .level 10}}">

		<div class="view flex flex-col m-1 p-2
			{{bgColor}} {{textColor}}
			border-solid border-2 rounded-3xl">

			<div class="flex flex-row items-center justify-between"
				hx-get="/device/{{id}}/show-view?view=info">
				<span class="text-lg font-bold ml-2.5 w-full cursor-pointer">
					{{name}}
				</span>
				<span class="icon">&#x23CE;</span> <!-- return arrow -->
			</div>

			<div class="m-2.5 min-w-lg">
{{ template "device-state-body.tmpl" .}}
			</div>
		</div>
	</div>
{{ renderChildren .sessionId (add .level 1) }}
</div>
