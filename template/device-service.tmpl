[Unit]
Description={{.Vars.service}}
ConditionPathExists=/usr/local/bin/{{.Vars.service}}
After=network.target
PartOf=merliot.target
 
[Service]
Type=simple
User=root
ExecStart=/usr/local/bin/{{.Vars.service}}
Restart=always
RestartSec=2

SyslogIdentifier={{.Vars.service}}
 
[Install]
WantedBy=multi-user.target merliot.target
