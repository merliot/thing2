[Unit]
Description={{.Vars.service}}
ConditionPathExists=/usr/local/bin/{{.Vars.service}}
After=network.target
 
[Service]
Type=simple
User=root

ExecStart=/usr/local/bin/{{.Vars.service}}

Restart=always
RestartSec=2

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier={{.Vars.service}}
 
[Install]
WantedBy=multi-user.target
