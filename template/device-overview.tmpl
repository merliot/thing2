<div class="model-{{.Device.Model}} {{.Vars.offline}}" id="device-{{.Device.Id}}"
			hx-target="this"
			hx-swap="outerHTML">
			<div class="flex flex-row ml-{{mult .Vars.level 10}}">
				<div class="overview flex flex-row m-1 p-2 justify-between
					{{.Vars.bgColor}} {{.Vars.textColor}}
					border-solid border-2 rounded-3xl cursor-pointer"
					hx-get="/device/{{.Device.Id}}/detail">
					<div class="flex flex-row flex-wrap items-center">
						<span class="text-lg font-bold ml-2.5 w-16">{{.Device.Name}}</span>
						<div class="rounded-xl overflow-hidden">
{{ template "body-overview.tmpl" .}}
						</div>
	     				</div>
					<div class="flex flex-row ml-4">
{{ template "button-locked.tmpl" . }}
					</div>
				</div>
			</div>
		</div>
