{{- if not $.Vars.linuxTarget }}
				<div class="flex flex-row mb-5">
					<label>
						Wifi SSID:
						<select name="ssid">
	{{- range $i, $ssid := $.Vars.ssids }}
		{{- if eq $ssid $.Vars.ssid }}
							<option value="{{$ssid}}" selected>{{$ssid}}</option>
		{{- else }}
							<option value="{{$ssid}}">{{$ssid}}</option>
		{{- end }}
	{{- end }}
						</select>
					</label>
				</div>
	{{- if $.Vars.missingWifi  }}
				 <div class="flex flex-row mb-5">
					<span class="mx-5 my-0">&#9888;</span>
					<div class="flex flex-col">
						<span class="text-red-500">
							Missing Wifi Settings.  This device target requires a Wifi SSID
							and passphrase to connect to the device onto the network.  To
							populate the Wifi SSID dropdown above, set one or more SSIDs/Passphrases
							combinations using environment variables:
						</span>
						<p></p>
						<!-- TODO not sure why border and padding aren't applied? -->
						<div class="grid grid-cols-2 border border-gray-300 gap-2">
							<div class="border border-gray-300 p-2 font-bold">Environment Variable</div>
							<div class="border border-gray-300 p-2 font-bold">Description</div>
							
							<div class="border border-gray-300 p-2">WIFI_SSIDS</div>
							<div class="border border-gray-300 p-2">Comma-separated list of SSIDs</div>

							<div class="border border-gray-300 p-2">WIFI_PASSPHRASES</div>
							<div class="border border-gray-300 p-2">Comma-separated list of passphrases</div>
						</div>
					</div>
				</div>
	{{- end }}
{{- end }}

{{- if $.Vars.linuxTarget }}
				<div class="flex flex-col">
					<span class="text-gray-700">(optional)</span>
					<div class="flex flex-row mb-5">
						<label>
							Run Local Web Server on Port:
							<input class="w-16" type="text" name="port" value="{{ .Vars.port }}">
						</label>
					</div>
				</div>
{{- end }}
				<hr class="my-5">
{{- template "download.tmpl" .}}
