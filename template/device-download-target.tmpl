{{- if not $.Vars.linuxTarget }}
				<div class="flex flex-row mb-5">
					<label>
						Wifi SSID:
						<select name="ssid">
	{{- range $i, $ssid := $.Vars.ssids }}
		{{- if eq $ssid $.Vars.ssid }}
							<option value="{{$ssid}}" selected>{{$ssid}}</option>
		{{- else }}
							<option value="{{$ssid}}">{{$ssid}}</option>
		{{- end }}
	{{- end }}
						</select>
					</label>
				</div>
	{{- if $.Vars.missingWifi  }}
				 <div class="flex flex-row mb-5">
					<span class="mx-5 my-0">&#9888;</span>
					<a class="text-red-500" target="_blank"
						href="/docs/wifi.html">Missing Wifi Settings</a>
				</div>
	{{- end }}
{{- end }}

{{- if $.Vars.linuxTarget }}
				<div class="flex flex-col">
					<span class="text-gray-700">(optional)</span>
					<div class="flex flex-row mb-5">
						<label>
							Run Local Web Server on Port:
							<input class="w-16" type="text" name="port" value="{{ .Vars.port }}">
						</label>
					</div>
				</div>
{{- end }}
				<hr class="my-5">
{{- template "download.tmpl" .}}
